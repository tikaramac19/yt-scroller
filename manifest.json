{
  "manifest_version": 3,
  "name": "InfiniteScroll",
  "version": "1.0",
  "icons": {},

  "background": {
    "service_worker": "./src/service_worker.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "match_about_blank": true,
      "matches": ["<all_urls>"],
      "js": ["./src/content_script.js"]
    }
  ],
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["https://*/*"]
}
